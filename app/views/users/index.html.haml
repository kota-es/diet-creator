= render 'shared/header'
.mypage-wrapper
  .mypage-main
    .mypage-main__container
      .mypage-main__data-box.profile
        .mypage-main__data-box__title 基本データ
        .mypage-main__data-box__content
          .mypage-main__data-box__content__left 身長 
          .mypage-main__data-box__content__right #{current_user.height}cm
        .mypage-main__data-box__content
          .mypage-main__data-box__content__left 体重
          .mypage-main__data-box__content__right #{current_user.weight}kg
        .mypage-main__data-box__content
          .mypage-main__data-box__content__left 年齢 
          .mypage-main__data-box__content__right #{current_user.age}歳
        .mypage-main__data-box__content
          .mypage-main__data-box__content__left 身体活動レベル
          .mypage-main__data-box__content__right #{current_user.pal}
      .mypage-main__data-box.kcal
        .mypage-main__data-box__title エネルギー（kcal）
        .mypage-main__data-box__content
          .mypage-main__data-box__content__left 1日の目安量
          .mypage-main__data-box__content__right #{current_user.day_kcal.to_s(:delimited)}kcal      
        .mypage-main__data-box__content
          .mypage-main__data-box__content__left 今日の摂取量
          .mypage-main__data-box__content__right 
            - if current_user.today_kcal.nil?
              0kcal
            - else
              #{current_user.today_kcal.to_s(:delimited)}kcal
        .mypage-main__data-box__balance
          - if current_user.balance_kcal >= 0
            あと
            .mypage-main__data-box__balance__number.text-success  
              #{current_user.balance_kcal.to_s(:delimited)}kcalオーケー!
          - else
            もう
            .mypage-main__data-box__balance__number.text-danger  
              #{current_user.balance_kcal.abs.to_s(:delimited)}kcalオーバー!
      .mypage-main__data-box.protein
        .mypage-main__data-box__title タンパク質（g）
        .mypage-main__data-box__content
          .mypage-main__data-box__content__left 1日の推奨量
          .mypage-main__data-box__content__right #{current_user.day_protein}g
        .mypage-main__data-box__content
          .mypage-main__data-box__content__left 今日の摂取量
          .mypage-main__data-box__content__right
            - if current_user.today_protein.nil?
              0g
            - else
              #{current_user.today_protein}g
        .mypage-main__data-box__balance
          - if current_user.balance_protein >= 0
            あと
            .mypage-main__data-box__balance__number.text-success  
              #{current_user.balance_protein.abs.round(1)}gオーケー!
          - else
            もう
            .mypage-main__data-box__balance__number.text-danger  
              #{current_user.balance_protein.abs.round(1)}gオーバー!
    .mypage-main__container
