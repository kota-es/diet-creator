= render 'shared/header'
.mypage-wrapper
  .mypage-flash
  .mypage-main
    .mypage-main__container
      .mypage-main__data-box.profile
        .mypage-main__data-box__title 基本データ
        .mypage-main__data-box__content
          .mypage-main__data-box__content__left 身長 
          .mypage-main__data-box__content__right #{current_user.height}cm
        .mypage-main__data-box__content
          .mypage-main__data-box__content__left 体重
          .mypage-main__data-box__content__right #{current_user.weight}kg
        .mypage-main__data-box__content
          .mypage-main__data-box__content__left 年齢 
          .mypage-main__data-box__content__right #{current_user.age}歳
